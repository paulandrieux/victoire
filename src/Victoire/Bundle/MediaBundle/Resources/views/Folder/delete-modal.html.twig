<div id="delete-modal" class="modal hide fade">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h3>{{ 'media.folder.delete.modal.title'|trans({'%folder%': folder.name }, 'victoire') | raw }}</h3>
    </div>
    <div class="modal-body">
        <p>{{ 'media.folder.delete.modal.text'|trans({'%folder%': folder.name }, 'victoire') | raw }}</p>
    </div>
    <div class="modal-footer">
    	<div class="btn_group">
	        <a href="{{ path('VictoireMediaBundle_folder_delete', { 'folderId' : folder.id }) }}" class="btn btn-danger">{{ 'form.delete' |trans({}, 'victoire') }}</a>
	        <button class="btn" data-dismiss="modal">{{ 'form.cancel' |trans({}, 'victoire') }}</button>
		</div>
    </div>
</div>
